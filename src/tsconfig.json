{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": true, // allow js to be compiled
        "alwaysStrict": true, // parse in strict mode and emit use strict for each file
        "pretty": true, // :)
        "sourceMap": false, // false for not showing the .ts file in browser sources
        "rootDir": "resources/ts",
        "outDir": "resources/js", // where to place the js files
        // outDir: 'fff'
        "watch": true
    },
    "files": [
        "resources/ts/register.ts"
    ]
}